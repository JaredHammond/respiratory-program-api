datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model Employee {
  id                   Int     @id @default(autoincrement())
  firstName            String
  lastName             String 
  workArea             String?
  currentEmployee      Boolean
  active               Boolean
  appendixDOnFile      Boolean
  employeeAttachments  EmployeeAttachment[]
  medicalEvaluations   MedicalEvaluation[]
  fitTests             FitTest[]
}

model MedicalEvaluation {
  id          Int     @id @default(autoincrement())
  employee    Employee @relation(fields: [employeeId], references: [id])
  employeeId  Int
  PLHCP       String
  EvalDate    DateTime
  approved    Boolean
  comment     String?
}

model FitTest {
  id           Int     @id @default(autoincrement())
  employee     Employee @relation(fields: [employeeId], references: [id])
  employeeId   Int
  respiratory  Respirator @relation(fields: [respiratorId], references: [id])
  respiratorId Int
  date         String
  protocol     String
  pass         Boolean
  comment      String?
}

model Respirator {
  id              Int     @id @default(autoincrement())
  manufacturer    String
  series          String
  model           String
  size            String
  fitTestRequired Boolean
  respiratorType  String
  protectionType  String
  fitTests        FitTest[]
}

model Vendor {
  id             Int     @id @default(autoincrement())
  vendorName     String?
  addressStreet  String?
  addressCity    String?
  addressState   String?
  addressZIP     String?
  phoneNumber    String?
  comment        String?
  attachments    VendorAttachment[]
}

model VendorAttachment {
  id             Int     @id @default(autoincrement())
  date           DateTime @default(now())
  attachmentName String
  attachmentType String
  fileName       String
  comment        String
  vendorId       Int
  vendor         Vendor @relation(fields: [vendorId], references: [id])
}

model EmployeeAttachment {
  id             Int     @id @default(autoincrement())
  date           DateTime @default(now())
  attachmentName String
  attachmentType String
  fileName       String
  comment        String
  employeeId     Int
  employee       Employee @relation(fields: [employeeId], references: [id])
}
